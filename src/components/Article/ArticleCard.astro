---
const { slug, title, date, description, image, imageAlt } = Astro.props;
---

<a href={slug}>
    <article>
        <div>
            <h3>{title}</h3>
            <hr>
            <p>{description}</p>
            <small><date>{date}</date></small>
        </div>
        <picture>
            <img src={image} alt={imageAlt} />
        </picture>
    </article>
</a>

<style>
    a {
        text-decoration: none;
        color: inherit;
    }
    article:hover {
        background-color: rgba(100, 100, 100, 0.2);
    }
    article {
        display: flex;
        flex-direction: row;
        gap: var(--s-xs);
        padding: var(--s-xxs);
        border: 1px solid var(--secondary-color);
    }

    h3 {
        color: var(--accent-color);
    }

    small {
        font-weight: 700;
    }

    article > div {
        flex-grow: 1;
    }

    img {
        max-width: 12rem;
        aspect-ratio: 3 / 2;
        object-fit: cover;
        align-self: center;
    }

    picture {
        align-self: center;
    }

    @media screen and (max-width: 32rem) {
        article {
            flex-direction: column;
            
        }
    }
</style>
